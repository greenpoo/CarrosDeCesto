import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)
public class MuteButton extends MainMenuItems
{
    public static GreenfootSound bailinho = new GreenfootSound("bailinho.mp3"); // Música do bailinho  
    public static boolean bailinhoMuted = false;//Booleano que determina se a música está 'muted' ou não
    public void act()
    {
        checkMuteButton();
        playOrMuteBGM();
    }
    private void playOrMuteBGM()
    {
        if(!bailinho.isPlaying() && !bailinhoMuted)
            bailinho.playLoop();
        else
            if(bailinho.isPlaying() && bailinhoMuted)
                bailinho.stop();
    }
    private void checkMuteButton()
    {
        if(Greenfoot.mouseClicked(this))
            bailinhoMuted = !bailinhoMuted;
    }
}
